{
  "name": "@bisonai-cic/icn-core",
  "version": "0.1.0",
  "type": "module",
  "description": "",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.12"
  },
  "author": "Bisonai",
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "cd .. && husky install core/.husky",
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc",
    "start:listener": "node --experimental-specifier-resolution=node --experimental-json-modules dist/listener/listener.js",
    "start:listener:vrf": "yarn start:listener --listener VRF",
    "start:listener:rr": "yarn start:listener --listener ICN",
    "start:listener:aggregator": "yarn start:listener --listener AGGREGATOR",

    "start:worker": "node --experimental-specifier-resolution=node --experimental-json-modules dist/worker/main.js",
    "start:worker:aggregator": "yarn start:worker --worker AGGREGATOR",
    "start:worker:vrf": "yarn start:worker --worker VRF",
    "start:worker:any_api": "yarn start:worker --worker ANY_API",
    "start:worker:predefined_feed": "yarn start:worker --worker PREDEFINED_FEED",

    "start:reporter": "node --experimental-specifier-resolution=node --experimental-json-modules dist/reporter.js",
    "keygen": "node --experimental-specifier-resolution=node --experimental-json-modules dist/cli/vrf-keygen.js",
    "test": "jest",
    "eslint": "DEBUG=eslint:cli-engine npx eslint 'src/**/*.ts' 'src/*.ts' 'test/*.ts'"
  },
  "dependencies": {
    "@bisonai-cic/icn-contracts": "0.1.0",
    "bn.js": "^5.2.1",
    "bullmq": "^3.2.2",
    "dotenv": "^16.0.3",
    "elliptic": "^6.5.4",
    "ethers": "^5.7.2",
    "got": "^12.5.3",
    "mathjs": "^11.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
