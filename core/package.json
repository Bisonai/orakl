{
  "name": "@bisonai/orakl-core",
  "version": "0.5.0",
  "type": "module",
  "description": "The Orakl Network Core",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.12"
  },
  "keywords": [
    "Oracle",
    "Orakl",
    "Orakl Network",
    "Blockchain",
    "Web3",
    "Data Feed",
    "Price Feed",
    "Request-Response",
    "VRF",
    "Verifiable Random Function",
    "Listener",
    "Reporter"
  ],
  "author": "Bisonai",
  "homepage": "https://github.com/Bisonai/orakl/tree/master/core#orakl-network-core",
  "license": "MIT",
  "scripts": {
    "prepare": "cd .. && husky install core/.husky",
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc",
    "start:listener": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/listener/main.js",
    "start:listener:vrf": "yarn start:listener --service VRF",
    "start:listener:request_response": "yarn start:listener --service REQUEST_RESPONSE",
    "start:listener:data_feed": "yarn start:listener --service DATA_FEED",
    "start:listener:data_feed_l2": "yarn start:listener --service DATA_FEED_L2",
    "start:worker": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/worker/main.js",
    "start:worker:data_feed": "yarn start:worker --worker DATA_FEED",
    "start:worker:data_feed_l2": "yarn start:worker --worker DATA_FEED_L2",
    "start:worker:vrf": "yarn start:worker --worker VRF",
    "start:worker:request_response": "yarn start:worker --worker REQUEST_RESPONSE",
    "start:reporter": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/reporter/main.js",
    "start:reporter:vrf": "yarn start:reporter --reporter VRF",
    "start:reporter:request_response": "yarn start:reporter --reporter REQUEST_RESPONSE",
    "start:reporter:data_feed": "yarn start:reporter --reporter DATA_FEED",
    "start:por": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/por/main.js",
    "start:reporter:data_feed_l2": "yarn start:reporter --reporter DATA_FEED_L2",
    "keygen": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/vrf-keygen.js",
    "adapter-hash": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/generate-adapter-hash.js",
    "aggregator-hash": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/generate-aggregator-hash.js",
    "flush": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/tools/flush-queues.js",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "DEBUG=eslint:cli-engine npx eslint 'src/**/*.ts' 'src/*.ts' 'test/*.ts'",
    "bull-dashboard": "docker-compose -f docker-compose.bull-monitor.yaml up"
  },
  "dependencies": {
    "@bisonai/orakl-contracts": "^1.0.0",
    "@bisonai/orakl-vrf": "^0.1.1",
    "@ethersproject/experimental": "^5.7.0",
    "@slack/webhook": "^6.1.0",
    "axios": "^1.2.2",
    "bullmq": "^3.2.2",
    "caver-js": "^1.10.1",
    "cbor": "^8.1.0",
    "cmd-ts": "^0.11.0",
    "console-hook": "^0.0.2",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "mathjs": "^11.4.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "redis": "^4.6.4",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
