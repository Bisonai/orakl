  "author": "Bisonai",
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "cd .. && husky install core/.husky",
    "clean": "rm -rf dist",
    "build": "yarn clean && tsc",
    "start:listener": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/listener/main.js",
    "start:listener:vrf": "yarn start:listener --listener VRF",
    "start:listener:request_response": "yarn start:listener --listener RequestResponse",
    "start:listener:aggregator": "yarn start:listener --listener Aggregator",
    "start:worker": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/worker/main.js",
    "start:worker:aggregator": "yarn start:worker --worker AGGREGATOR",
    "start:worker:vrf": "yarn start:worker --worker VRF",
    "start:worker:request_response": "yarn start:worker --worker REQUEST_RESPONSE",
    "start:worker:predefined_feed": "yarn start:worker --worker PREDEFINED_FEED",
    "start:reporter": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/reporter/main.js",
    "start:reporter:vrf": "yarn start:reporter --reporter VRF",
    "start:reporter:request_response": "yarn start:reporter --reporter REQUEST_RESPONSE",
    "start:reporter:aggregator": "yarn start:reporter --reporter AGGREGATOR",
    "keygen": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/vrf-keygen.js",
    "data-feed": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/data-feed.js",
    "adapter-hash": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/generate-adapter-hash.js",
    "aggregator-hash": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/generate-aggregator-hash.js",
    "flush": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/flush-queues.js",
    "cli": "node --no-warnings --experimental-specifier-resolution=node --experimental-json-modules dist/cli/operator/main.js",
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "eslint": "DEBUG=eslint:cli-engine npx eslint 'src/**/*.ts' 'src/*.ts' 'test/*.ts'"
  },
  "dependencies": {
    "@bisonai-cic/icn-contracts": "^0.3.0",
    "@slack/webhook": "^6.1.0",
    "axios": "^1.2.2",
    "bn.js": "^5.2.1",
    "bullmq": "^3.2.2",
    "cmd-ts": "^0.11.0",
    "console-hook": "^0.0.2",
    "dotenv": "^16.0.3",
    "elliptic": "^6.5.4",
    "ethers": "^5.7.2",
    "mathjs": "^11.4.0",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
