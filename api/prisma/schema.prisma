generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chain {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  Aggregator Aggregator[]
}

model Feed {
  id          Int    @id @default(autoincrement())
  source      String
  decimals    Int
  latestRound Int
  definition  Json

  // Adapter relation
  adapter   Adapter @relation(fields: [adapterId], references: [id])
  adapterId Int
}

model Adapter {
  id         Int          @id @default(autoincrement())
  adapterId  String       @unique
  name       String
  feeds      Feed[]
  Aggregator Aggregator[]
}

model Aggregator {
  id                Int     @id @default(autoincrement())
  aggregatorId      String  @unique
  active            Boolean @default(false)
  name              String
  heartbeat         Int
  threshold         Float
  absoluteThreshold Float

  // Adapter relation
  adapter   Adapter @relation(fields: [adapterId], references: [id])
  adapterId Int

  // Chain relation
  chain   Chain @relation(fields: [chainId], references: [id])
  chainId Int
}

