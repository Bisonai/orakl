{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "avoid-throw": "off",
    "avoid-low-level-calls": "off",
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "^0.8.16"]
  }
}
