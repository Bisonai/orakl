{
  "name": "@bisonai/orakl-monitor",
  "version": "0.0.1",
  "description": "Orakl Network Monitoring System",
  "author": "Bisonai",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -c -- node-pg-migrate -m ./migrations -j ts --tsconfig ./tsconfig.json up && nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "dotenv -c -- node-pg-migrate -m ./migrations -j ts --tsconfig ./tsconfig.json up && node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration": "dotenv -c -- node-pg-migrate -m ./migrations -j ts --tsconfig ./tsconfig.json"
  },
  "dependencies": {
    "@nestjs/bullmq": "^1.1.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.5",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/schedule": "^2.2.1",
    "@nestjs/swagger": "^6.3.0",
    "@slack/webhook": "^6.1.0",
    "axios": "^1.2.2",
    "bn.js": "^5.2.1",
    "bullmq": "^3.11.0",
    "cbor": "^8.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cmd-ts": "^0.11.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.2.1",
    "elliptic": "^6.5.4",
    "ethers": "^5.7.2",
    "ioredis": "^5.3.2",
    "mathjs": "^11.4.0",
    "node-cron": "^3.0.2",
    "node-pg-migrate": "^6.2.2",
    "passport-jwt": "^4.0.1",
    "pg": "^8.9.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^28.1.2",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
